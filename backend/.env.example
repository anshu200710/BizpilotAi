# Backend environment variables example
# Copy to .env and fill with your secrets

PORT=5000
MONGO_URI=mongodb://localhost:27017/your-db
JWT_SECRET=supersecretjwtkey

# Optional default WhatsApp credentials (can be left empty when using per-account tokens)
PHONE_NUMBER_ID=
WHATSAPP_TOKEN=

# Encryption key used to encrypt WhatsApp access tokens (required for multi-tenant tokens)
# Must decode to 32 bytes. Provide either base64 or hex-encoded key.
# Example generate (Node):
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=

# Verify webhook token for legacy single-account setup (not used for per-account verification)
VERIFY_TOKEN=
